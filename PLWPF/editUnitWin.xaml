<Window x:Class="PLWPF.editUnitWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="editUnitWin" Height="444.898" Width="810.204">
    <Window.Background>
        <ImageBrush ImageSource="background.jpg"/>
    </Window.Background>
    <Grid Name="editUnitWinGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="owner" HorizontalAlignment="Left" Height="49" Margin="10,42,0,0" VerticalAlignment="Top" Width="117" FontSize="14"/>
        <Label Content="unit name" HorizontalAlignment="Left" Height="48" Margin="10,96,0,0" VerticalAlignment="Top" Width="68" FontSize="14"/>
        <Label Content="area" HorizontalAlignment="Left" Height="51" Margin="10,169,0,0" VerticalAlignment="Top" Width="68" FontSize="14"/>
        <Label Content="address" HorizontalAlignment="Left" Height="49" Margin="10,251,0,0" VerticalAlignment="Top" Width="68" FontSize="14"/>
        <Label Content="type" HorizontalAlignment="Left" Height="49" Margin="10,306,0,0" VerticalAlignment="Top" Width="76" FontSize="14"/>
        <Label Content="max people" HorizontalAlignment="Left" Height="37" Margin="10,355,0,0" VerticalAlignment="Top" Width="99" FontSize="14"/>
        <Button Content="update" HorizontalAlignment="Left" Height="92" Margin="66,300,0,0" VerticalAlignment="Top" Width="147" Grid.Column="2" Click="Button_Click"/>
        <TextBox Text="{Binding Path=HostingUnitName}" HorizontalAlignment="Left" Height="30" Margin="108,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117"/>
        <ComboBox Name="areaCB" HorizontalAlignment="Left" Height="51" Margin="108,169,0,0" VerticalAlignment="Top" Width="117"/>
        <TextBox Text="{Binding Path=Address}" HorizontalAlignment="Left" Height="41" Margin="110,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115"/>
        <ComboBox Name="typeCB" HorizontalAlignment="Left" Height="30" Margin="110,305,0,0" VerticalAlignment="Top" Width="115"/>
        <TextBox Text="{Binding Path=MaxPeople}" HorizontalAlignment="Left" Height="27" Margin="145,365,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <CheckBox Name="poolCB" Content="pool" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="41,48,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="0.037,0.617" FontSize="14"/>
        <CheckBox Name="jacuzziCB" Content="jacuzzi" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="41,114,0,0" VerticalAlignment="Top" Width="81" FontSize="14"/>
        <CheckBox Name="gardenCB" Content="garden" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="41,175,0,0" VerticalAlignment="Top" Width="81" FontSize="14"/>
        <CheckBox Name="childrenAtractionCB" Content="children atraction" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="41,239,0,0" VerticalAlignment="Top" Width="142" FontSize="14"/>
        <CheckBox Name="breakfastCB" Content="breakfast" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="41,300,0,0" VerticalAlignment="Top" Width="81" FontSize="14"/>
        <CheckBox Name="HBCB" Content="HB" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="41,342,0,0" VerticalAlignment="Top" Width="81" FontSize="14"/>
        <CheckBox Name="FBCB" Content="FB" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="66,40,0,0" VerticalAlignment="Top" Width="81" FontSize="14"/>
        <CheckBox Name="bedOnlyCB" Content="bed only" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="66,96,0,0" VerticalAlignment="Top" Width="81" FontSize="14"/>
        <CheckBox Name="freeWifiCB" Content="free wifi" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="66,157,0,0" VerticalAlignment="Top" Width="81" FontSize="14"/>
        <CheckBox Name="freeParkingCB" Content="free parking" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="66,227,0,0" VerticalAlignment="Top" Width="96" FontSize="14"/>
        <Label Name="ownerLabel" HorizontalAlignment="Left" Height="38" Margin="108,40,0,0" VerticalAlignment="Top" Width="117"/>

    </Grid>
</Window>
