        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="מנהל האתר" Height="435.185" Width="722.222">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="335*"/>
            <RowDefinition Height="69*"/>
        </Grid.RowDefinitions>
        <Button Content="הוסף יחידה" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Button_Click_2" Grid.Row="1" Grid.Column="3"/>
